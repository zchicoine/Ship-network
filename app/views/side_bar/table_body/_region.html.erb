<!--
After the user click the region on the map this side will appear.
-->




    <%= render 'side_bar/part_of_table/headers/header'%>
    <thead class="table_after_clicking_on_a_region text-left">
      <tr>
        <th colspan="<%= 2%>">
            <%= image_tag("greentriangle_down.png", size: "16", class:"triangle_image")%> List of Ports
        </th>
      </tr>
      </thead>
      <tr>
        <td colspan="<%= 2%>">
          <div class="scroll_inside_table" style="overflow: auto; height: 150px; padding: 4px">


            <table class="table table-hover text-left">
                <%  ports_list = get_name_of_ports_and_coordinates_per_region @side_info[:region_name]   %>
                <% ports_list.each do  |port|%>

                    <tr >
                        <td>
                            <%= link_to port[:name], side_bar_port_path(port_info: {port_name: port[:name], port_coordinates:"a"}),:remote => true, method: :post
                            %>
                        </td>
                    </tr>
                <% end %>
            </table>

          </div>
        </td>
      </tr>

        <%= render 'side_bar/part_of_table/bodies/region_stats' %>


