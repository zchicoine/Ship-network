        <% unless v.blank? || v == 0 %>
          <tr>
            <td> <%= k.humanize.capitalize %> </td>
            <td> <%= v %> </td>
          </tr>

        <% end %>
        <% end %>

    </table>
 </div>
</div>

<div class="row">
