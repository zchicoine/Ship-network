<!--TABLE-->
<div class="tb">
  <div class="ship_details">
    <div class="modal-header ship_detail-header">
      <button type="button" class="close close-color" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4 class="modal-title">Ship Details</h4>
    </div>
  

<div class="container scroll_inside_table scroll_size_shipdetails">

<div class="row">
  <div class="col-md-6">
    <img alt="Greentriangle down" class="triangle_image" height="16" src="/assets/greentriangle_down.png" width="16">
    <span>General Information</span>
  </div>

  <div class="col-md-6">
    <img alt="Greentriangle down" class="triangle_image" height="16" src="/assets/greentriangle_down.png" width="16">
    <span>Capacity</span>
  </div>
</div>


<div class="row">
  <div class="col-md-6 ship_details-portcall">
    <table>
      <% @ship_details = get_ship_details_first_table @name_test %>
      <% #@table_one = @ship_details[0] %>
      <% @ship_details.as_json.each do |k, v| %>
      <% unless v.blank? || v == 0 %>
        <tr>
          <td><%= k.humanize.capitalize %></td>
          <td> <%= v %></td>
        </tr>

      <% end %>
      <% end %>

    </table>
  </div>

 <div class="col-md-6 ship_details-portcall" >
    <table>
        <% @ship_details = get_ship_details_second_table @name_test %>
        <% #@table_one = @ship_details[0] %>
