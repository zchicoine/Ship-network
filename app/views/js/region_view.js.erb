// make sure the map is in place
if($("#googleMap").length == 0){
    $("#outer-map").html(" <%= escape_javascript(render 'google_map/index')%>");
    // not only the map will reload but also others will change accordingly
    var spec = {'layer':REGION_LEVEL, 'region_name': '<%= escape_javascript( @saved_name )%>'};
    reload_the_map_with_specification(spec);
}else{
    update_region_view(" <%= escape_javascript(@saved_name)%>");
}

